%html{:xmlns =>'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', :lang => 'en'}
  %head
    - @title = 'Detailed Alerts'
    %meta{'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8'}/
    %title= "Sonic Status - #{@title}"
    %link{:href => '/stylesheets/screen.css', :media => 'screen', :rel => 'stylesheet', :type => 'text/css'}/ 

  #critical

  %body 
  
  - if overall_status.eql?("OK")
    %table.status_good{ :cellpadding => 2, :cellspacing => 2 }
      %thead
        %tr
          %th Overall Status: OK
  - elsif overall_status.eql?("FAIL")
    %table.status_bad{ :cellpadding => 2, :cellspacing => 2 }
      %thead
        %tr
          %th Overall Status: FAIL  

  %h3
    Critical Alerts

    %table.alerts{ :cellpadding => 0, :cellspacing => 2 }
      %thead
        %tr
          %th Date 
          %th Type
          %th Source
          %th Container
          %th Broker
          %th User
          %th Client IP
      %tbody
        - reset_cycle
        - unless @store_crit == nil
          - @store_crit.each do |alert|
            %tr{:class => cycle}
              %td= Time.at(Array(alert['timestamp']).sort.to_s.to_i)
              %td= alert['type']
              %td= alert['source']
              %td= alert['container']          
              %td= alert['broker']
              %td= alert['user']
              %td= alert['client'] 

  %h3
    Info Alerts

    %table.alerts{ :cellpadding => 0, :cellspacing => 2 }
      %thead
        %tr
          %th Date 
          %th Type
          %th Source
          %th Broker
          %th User
          %th Client IP 
          %th Connect ID
      %tbody
        - reset_cycle
        - unless @store_info == nil
          - @store_info.each do |alert|
            %tr{:class => cycle}
              %td= Time.at(Array(alert['timestamp']).sort.to_s.to_i)
              %td= alert['type']
              %td= alert['source']
              %td= alert['broker']
              %td= alert['user']
              %td= alert['client']
              %td= alert['connectid']